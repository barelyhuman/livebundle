{
  "compilerOptions": {
    "declaration": true,
    "target": "es2018",
    "module": "commonjs",
    "lib": ["es2018"],
    "esModuleInterop": true,
    "resolveJsonModule": true,
    "skipLibCheck": true,
    "strictNullChecks": true,
    "noImplicitAny": true,
    "sourceMap": true,
    "types": ["node"],
    "typeRoots": ["node_modules/@types", "./typings"]
  },
  "exclude": ["node_modules", "dist"]
}
